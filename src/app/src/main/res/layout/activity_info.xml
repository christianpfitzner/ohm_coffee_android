<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cornsilk"
    android:fitsSystemWindows="false"
    tools:context=".Information">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cornsilk"
        android:theme="@style/AlertDialog.AppCompat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ocean"
                android:text="Order"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rootlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Theme"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="For moe infomation push a button "
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Theme"
                android:textSize="24sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Theme"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnGithub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="Github"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Theme"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="Info Team"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Theme"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnCoffeeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="Info Wiki Coffee"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
